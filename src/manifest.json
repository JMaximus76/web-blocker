{
  "manifest_version": 3,


  "version": "0.0.2",
  "name": "Web Block",
  "description": "Block unwated websites easily.",

  "{{firefox}}.icons": {
    "48": "icons/logo_black.svg"
  },

  "{{chrome}}.icons": {
    "48": "icons/logo_black_48.png"
  },

  "permissions": [
    "storage",
    "webNavigation",
    "tabs",
    "alarms"
  ],



  "{{chrome}}.action": {
    "default_icon": {
      "32": "icons/logo_black_32.png"
    },
    "default_title": "Web Block",
    "default_popup": "src/popup/popup.html"
  },

  "{{firefox}}.action": {
    "default_icon": {
      "19": "icons/logo_black.svg"
    },
    "default_title": "Web Block",
    "default_popup": "src/popup/popup.html"
  },


  "{{chrome}}.background": {
    "service_worker": "src/background_scripts/background.ts",
    "type": "module"
  },

  "{{firefox}}.background": {
    "{{firefox}}.scripts": [
      "src/background_scripts/background.ts"
    ]
  }
}
