{
  "manifest_version": 3,


  "version": "0.2.0",
  "name": "Web Block",
  "description": "Allows users to specify certain websites to be blocked.",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "permissions": [
    "storage",
    "webNavigation",
    "tabs"
  ],

  "{{chrome}}.host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_icon": {
      "19": "icons/icon-19.png"
    },
    "default_title": "Web Block",
    "default_popup": "src/popup/popup.html"
  },


  "background": {
    "{{chrome}}.service_worker": "src/background_scripts/background.js",
    "{{firefox}}.scripts": ["src/background_scripts/background.js"]
  }
}
