{
    "manifest_version": 2,
    "version": "0.2",
    "name": "Web Block",

    "description": "Allows users to specify certain websites to be blocked.",

    "icons": {
        "48": "icons/icon-48.png"
    },

    "permissions": [
        "storage",
        "webNavigation",
        "<all_urls>",
        "tabs",
        "webRequest"
    ],

    

    "background": {
        "scripts": [
            "background_scripts/init.js",
            "background_scripts/blocker.js"
        ],
        "persistent": false
    }
}
